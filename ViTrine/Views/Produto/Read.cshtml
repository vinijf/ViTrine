@model ViTrine.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h1>Detalhes</h1>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>
        <dt class = "col-sm-2">
            Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaProduto)
        </dd>
        <dt class = "col-sm-2">
            Promoção
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PromocaoProduto)
        </dd>
        <dt class = "col-sm-2">
            Preço
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecoProduto)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescricaoProduto)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Update" asp-route-id="@Model.ProdutoId">Editar</a> |
    <a asp-action="Index" asp-route-id="@Model.LojaId">Voltar</a>
</div>
