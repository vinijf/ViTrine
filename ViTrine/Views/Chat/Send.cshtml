@model ViTrine.Models.Mensagem

@{
    ViewData["Title"] = "Enviar Mensagem";
}

<h1>Enviar</h1>

<h4>Mensagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-route-id="@Model.ChatId" asp-action="Send">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="ChatId" />
                <label asp-for="TextoMensagem" class="control-label">Mensagem</label>
                <input asp-for="TextoMensagem" class="form-control" />
                <span asp-validation-for="TextoMensagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Read" asp-route-id="@Model.ChatId">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
