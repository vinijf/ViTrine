@model ViTrine.Models.Loja

@{
    ViewData["Title"] = "Detalhes da Loja";
}

<h1>Detalhes</h1>

<div>
    <h4>Loja</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeLoja)
        </dd>
        <dt class = "col-sm-2">
            Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaLoja)
        </dd>
        <dt class = "col-sm-2">
            Telefone
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelefoneLoja)
        </dd>
        <dt class = "col-sm-2">
            Cidade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CidadeLoja)
        </dd>
        <dt class = "col-sm-2">
            Endereço
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnderecoLoja)
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Chat" asp-action="Index" asp-route-id="@Model.LojaId">Chat</a> |
    <a asp-action="Update" asp-route-id="@Model.LojaId">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>
